<div class="relative bg-indigo-900 overflow-hidden mb-12 rounded-b-3xl shadow-2xl">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-800 mix-blend-multiply"></div>
  </div>
  <div class="relative max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
      Aprende sin límites
    </h1>
    <p class="mt-6 max-w-2xl mx-auto text-xl text-indigo-100">
      Descubre tutorías personalizadas o comparte tu conocimiento con el mundo.
    </p>
    
    <div class="mt-10 max-w-xl mx-auto">
      <%= form_with url: services_path, method: :get, class: "relative group" do |f| %>
        <div class="flex items-center bg-white rounded-full p-2 shadow-lg focus-within:ring-4 focus-within:ring-indigo-500/50 transition-all">
          <svg class="h-6 w-6 text-gray-400 ml-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <%= f.text_field :query, value: params[:query], placeholder: "¿Qué quieres aprender hoy?", class: "w-full border-0 focus:ring-0 text-gray-800 placeholder-gray-400 bg-transparent h-10 px-4" %>
          <%= f.button "Buscar", class: "bg-indigo-600 text-white rounded-full px-6 py-2 font-medium hover:bg-indigo-700 transition transform hover:scale-105" %>
        </div>
        
        <div class="mt-4 flex justify-center space-x-4 text-sm text-indigo-200">
          <%= link_to "Online", services_path(modality: 'online'), class: "hover:text-white underline decoration-dashed" %>
          <%= link_to "Presencial", services_path(modality: 'in_person'), class: "hover:text-white underline decoration-dashed" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
  <div class="flex justify-between items-end mb-8">
    <h2 class="text-2xl font-bold text-gray-900">Clases Destacadas</h2>
    <% if user_signed_in? && current_user.teacher? %>
      <%= link_to new_service_path, class: "group inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition shadow-md hover:shadow-lg" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 group-hover:rotate-90 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear Nueva Clase
      <% end %>
    <% end %>
  </div>

  <% if @services.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @services.each do |service| %>
        <%= link_to service_path(service), class: "group block" do %>
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full flex flex-col">
            <div class="h-32 bg-gradient-to-br from-indigo-50 to-blue-100 flex items-center justify-center relative overflow-hidden">
               <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-indigo-200 rounded-full opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
               <h3 class="text-4xl font-black text-indigo-900/10 group-hover:text-indigo-600/20 transition-colors uppercase tracking-widest">
                 <%= service.title[0..2] %>
               </h3>
               
               <div class="absolute bottom-3 right-3">
                 <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/80 backdrop-blur text-indigo-800 shadow-sm border border-indigo-100">
                   <%= service.modality.humanize %>
                 </span>
               </div>
            </div>
            
            <div class="p-6 flex-grow flex flex-col justify-between">
              <div>
                <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors mb-2 line-clamp-1">
                  <%= service.title %>
                </h3>
                <p class="text-gray-500 text-sm line-clamp-3 mb-4">
                  <%= service.description %>
                </p>
              </div>
              
              <div class="flex items-center justify-between border-t border-gray-50 pt-4 mt-2">
                <div class="flex items-center">
                  <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center text-xs font-bold text-gray-600">
                    <%= service.user.first_name[0] %>
                  </div>
                  <span class="ml-2 text-xs text-gray-500 font-medium">Prof. <%= service.user.first_name %></span>
                </div>
                <div class="text-right">
                  <p class="text-lg font-bold text-gray-900">
                    $<%= service.price_cents %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20 bg-white rounded-3xl border-2 border-dashed border-gray-200">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No hay clases disponibles</h3>
      <p class="mt-1 text-sm text-gray-500">Intenta con otra búsqueda o limpia los filtros.</p>
    </div>
  <% end %>
</div>