<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  
  <nav class="flex mb-8" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-4">
      <li><%= link_to "Inicio", root_path, class: "text-gray-400 hover:text-gray-500 transition" %></li>
      <li><span class="text-gray-300">/</span></li>
      <li><span class="text-gray-500 font-medium truncate max-w-xs"><%= @service.title %></span></li>
    </ol>
  </nav>

  <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
    
    <div class="lg:col-span-7 space-y-8">
      <div>
        <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl mb-4"><%= @service.title %></h1>
        <div class="flex items-center space-x-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
            <%= @service.modality.humanize %>
          </span>
          <span class="text-gray-500 text-sm flex items-center">
            <svg class="mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <%= @service.duration %> minutos
          </span>
        </div>
      </div>

      <div class="prose prose-indigo text-gray-600 bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Sobre esta clase</h3>
        <p class="leading-relaxed whitespace-pre-line"><%= @service.description %></p>
      </div>

      <div class="flex items-center bg-gray-50 p-6 rounded-2xl border border-gray-100">
        <div class="h-16 w-16 rounded-full bg-indigo-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg">
          <%= @service.user.first_name[0] %>
        </div>
        <div class="ml-4">
          <h4 class="text-lg font-bold text-gray-900">Prof. <%= @service.user.full_name %></h4>
          <p class="text-sm text-gray-500">Instructor verificado en A&N</p>
        </div>
      </div>
      
      <% if current_user == @service.user %>
        <div class="flex space-x-4 pt-4 border-t border-gray-200">
          <%= link_to edit_service_path(@service), class: "flex-1 text-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Editar Clase
          <% end %>
          <%= button_to "Eliminar Clase", service_path(@service), method: :delete, form: { data: { turbo_confirm: "¿Estás seguro?" }, class: "flex-1" }, class: "w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200" %>
        </div>
      <% end %>
    </div>

    <div class="mt-10 lg:mt-0 lg:col-span-5 lg:sticky lg:top-24">
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
        <div class="p-8">
          <div class="flex justify-between items-baseline mb-6">
            <span class="text-sm text-gray-500 font-medium">Precio por sesión</span>
            <span class="text-4xl font-extrabold text-gray-900">$<%= @service.price_cents %></span>
          </div>

          <ul class="space-y-3 mb-8 text-sm text-gray-600">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Garantía de satisfacción
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Acceso a materiales extra
            </li>
             <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Chat directo con el profesor
            </li>
          </ul>

          <% if user_signed_in? %>
            <% if current_user.student? %>
               <%= link_to new_service_booking_path(@service), class: "w-full block text-center bg-indigo-600 border border-transparent rounded-xl py-4 px-4 text-base font-bold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5" do %>
                 Reservar Ahora
               <% end %>
               <p class="mt-4 text-xs text-center text-gray-400">No se te cobrará nada todavía.</p>
            
            <% elsif current_user.teacher? && current_user != @service.user %>
              <div class="bg-yellow-50 p-4 rounded-lg text-yellow-800 text-sm">
                Iniciaste sesión como Profesor. Necesitas una cuenta de Estudiante para reservar.
              </div>
            <% elsif current_user == @service.user %>
               <div class="bg-gray-100 p-4 rounded-lg text-gray-600 text-sm text-center">
                Esta es tu clase.
              </div>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "w-full block text-center bg-gray-900 text-white rounded-xl py-4 font-bold hover:bg-gray-800 transition" do %>
              Inicia sesión para reservar
            <% end %>
          <% end %>
        </div>
        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100">
          <p class="text-xs text-gray-500 text-center">
            Protegido por A&N Secure Payments.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>