<div class="bg-white rounded-2xl shadow-xl overflow-hidden">
  <div class="p-8 sm:p-10">
    <%= form_with(model: service, class: "space-y-6") do |form| %>
      
      <% if service.errors.any? %>
        <div class="bg-red-50 p-4 rounded-lg mb-6">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(service.errors.count, "error") %> impidieron guardar esta clase:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% service.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :title, "Título de la clase", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :title, class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Ej: Introducción a Ruby on Rails" %>
      </div>

      <div>
        <%= form.label :description, "Descripción detallada", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :description, rows: 5, class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Explica qué aprenderán los alumnos..." %>
      </div>

      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <%= form.label :price_cents, "Precio ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :price_cents, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-lg py-3", placeholder: "0.00" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <%= form.label :duration, "Duración (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :duration, class: "appearance-none block w-full px-3 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="sm:col-span-2">
          <%= form.label :modality, "Modalidad", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :modality, Service.modalities.keys.map { |k| [k.humanize, k] }, {}, class: "block w-full pl-3 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-lg" %>
        </div>
      </div>

      <div class="pt-6 border-t border-gray-100 flex items-center justify-end space-x-4">
        <%= link_to "Cancelar", services_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
        <%= form.submit "Publicar Clase", class: "inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-bold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>